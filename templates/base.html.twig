<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}


		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
{# {{ react_component('ThemeProvider', {}, { 'componentName': 'ThemeProvider' }) }} #}

		{% if is_granted('IS_AUTHENTICATED_FULLY') %}
			<div {{ react_component('Navbar', { 'LinkBrand': path('admin'), 'LinkHome': path('app_home'), 'LinkSignOut': path('app_logout'), 'LinkArticleShow': path('app_home_articles') } ) }}></div>
		{% else %}
			<div {{ react_component('NavbarConnect', { 'LinkBrand': path('admin'), 'LinkSignIn': path('app_login'), 'LinkSignUp':path('app_register'), 'LinkHome': path('app_home'), 'LinkArticleShow': path('app_home_articles') } ) }}></div>
		{% endif %}


		{% block body %}
			<div class="row">
				<div class="col">
					<div>
						{% include 'widget/categories.html.twig' %}
					</div>
				</div>
			</div>
			<div id="article-list">
				{% include 'article/list.html.twig' with { articles } %}
			</div>
		{% endblock %}

		<div {{ react_component('Footer')}}></div>
	</body>
</html>
