<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}


        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div {{ react_component('Navbar', { 'LinkBrand': path('admin'), 'LinkSignIn': path('app_login'), 'LinkSignUp':path('app_register'), 'LinkArticleShow': path('articles_show') }) }}></div>

        {# <div {{ react_component('Homepage') }}></div> #}
                <div {{ react_component('Header')}}></div>


                <div {{ react_component('HomeNews') }}></div>


        {% block body %}
            <div id="article-list">
                {% include 'article/list.html.twig' with { articles } %}
            </div>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <div>   
                <a href="{{ path('app_profile', {username: app_user.username}) }} >Mon profil</a>
                <a href="{{ path('app_logout') }}">Se déconnecter</a>
            </div>
            {% endif %}
        {% endblock %}

        <div {{ react_component('Footer')}}></div>

    </body>
</html>
